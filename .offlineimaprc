# vim filetype=config
# Here are settings for all accounts.
[general]
accounts = personal, hotmail, gmail
starttls = yes
ssl = yes
autorefresh = 1


# This is my personal account
[Account personal]

localrepository = personal-local
remoterepository = personal-remote

[Repository personal-remote]
type = Gmail
remoteuser = YOUR-EMAIL@gmail.com
remotepass = "password"
#remotehost = imap.gmail.com
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository personal-local]
type = Maildir
localfolders = ~/.Mail/Personal

# Alternative account
[Account hotmail]

localrepository = hotmail-local
remoterepository = hotmail-remote

[Repository hotmail-remote]
type = IMAP
remoteuser = YOUR-EMAIL@hotmail.com
remotepass = "password"
remotehost = imap-mail.outlook.com
#remotehost = imap.hotmail.com
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
auth_mechanisms = LOGIN

[Repository hotmail-local]
type = Maildir
localfolders = ~/.Mail/Hotmail


# This is another alternative account
[Account gmail]

localrepository = gmail-local
remoterepository = gmail-remote

[Repository gmail-remote]
type = Gmail
remoteuser = YOUR-EMAIL@gmail.com
remotepass = "password"
#Note that the line below will not sync Gmail's redundant "All Mail" box. You can add other inboxes here you don't want to sync.
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository gmail-local]
type = Maildir
localfolders = ~/.Mail/Gmail

