! ------------------------------------------------------------------------------
! Colors
! ------------------------------------------------------------------------------
#include                        ".themes/colors/vulvy"
#include                        ".themes/fonts/input"

*secondary:                     #3a3a3a
*underline:                     #0094ce
*active:                        #aa0000

! special
*.foreground:   fgbase
*.background:   bgbase
*.cursorColor:  cursor

! black
*.color0:       dark_black
*.color8:       light_black

! red
*.color1:       dark_red
*.color9:       light_red

! green
*.color2:       dark_green
*.color10:      light_green

! yellow
*.color3:       dark_yellow
*.color11:      light_yellow

! blue
*.color4:       dark_blue
*.color12:      light_blue

! magenta
*.color5:       dark_magenta
*.color13:      light_magenta

! cyan
*.color6:       dark_cyan
*.color14:      light_cyan

! white
*.color7:       dark_white
*.color15:      light_white


dwm.normfgcolor:                fgbase
dwm.normbgcolor:                bgbase
dwm.normbordercolor:            dark_black
dwm.selfgcolor:                 bgbase
dwm.selbgcolor:                 dark_blue
dwm.selbordercolor:             dark_blue

! ------------------------------------------------------------------------------
! St
! ------------------------------------------------------------------------------
St.alpha:                       232

! ------------------------------------------------------------------------------
! URxvt
! ------------------------------------------------------------------------------
URxvt.scrollBar:                false
URxvt.visualBell:               false
URxvt.urgentOnBell:             false
URxvt.utf8:                     true
URxvt.cursorBlink:              true
URxvt.cursorUnderline:          true
URxvt.depth:                    32
URxvt.urxvt:                    screen-256color
!URxvt.letterSpace:              -1
URxvt.intensityStyles:          false
!URxvt.inheritPixmap:            true
URxvt.colorUL:                  #ff0adc

!! Extensions
URxvt.perl-ext-common:          default,matcher,resize-font,url-select,keyboard-select
!! url-select
URxvt.keysym.M-u:               perl:url-select:select_next
URxvt.url-select.launcher:      /usr/bin/xdg-open
URxvt.url-select.underline:     true
!! keyboard-select:
URxvt.keysym.M-Escape:          perl:keyboard-select:activate
!! resize-font
URxvt.resize-font.smaller:      C-Down
URxvt.resize-font.bigger:       C-Up
!! Matcher
URxvt.url-launcher:             /usr/bin/xdg-open
URxvt.matcher.button:           1

! ------------------------------------------------------------------------------
! Xft Font Configuration
! ------------------------------------------------------------------------------

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

