# vim: filetype=neomuttrc
set imap_user = "YOUR-EMAIL@domain.com"                       
set smtp_url = "smtp://YOUR-EMAIL@smtp.domain.com:587/"       
set from = "YOUR-EMAIL@domain.com"                            
set realname = "Farouk Mokhtari"                                  
set mbox_type = Maildir
set sendmail = "/usr/bin/msmtp -a home"
set folder = "~/.Mail/Home"                     
set folder = "imaps://imap.domain.com:993/" 
set spoolfile = "+INBOX"                                      
set record = /dev/null
set mbox = "+[Home].All Mail"
set postponed = "+[Home].Drafts"                             
set header_cache = ~/.config/mutt/mailru/cache/headers            
set message_cachedir = ~/.config/mutt/mailru/cache/bodies         
set certificate_file = ~/.config/mutt/mailru/certificates  
set ssl_starttls = yes
set ssl_force_tls = yes
source "~/.config/mutt/creds/getpass home |"
mailboxes +INBOX

bind index i noop
macro index ii "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ia "<change-folder>=[Home].All Mail<enter>" "Go to all mail"
macro index is "<change-folder>=[Home].Sent Mail<enter>" "Go to sent mail"
macro index iS "<change-folder>=[Home].Spam<enter>" "Go to spam"
macro index it "<change-folder>=[Home].Trash<enter>" "Go to trash"
macro index id "<change-folder>=[Home].Drafts<enter>" "Go to drafts"
