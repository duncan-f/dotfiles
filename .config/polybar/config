modules-left = i3 mpd
modules-center = xwindow
modules-right = redshift backlight volume battery date powermenu  

tray-position = right
tray-padding = 0 
tray-offset-y = 0%
tray-offset-x = 0%
tray-detached = false

[module/i3]
