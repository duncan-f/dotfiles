[colors]
background = #2f343f
;background = ${xrdb:*color8}
background-alt = ${xrdb:color0}
foreground = ${xrdb:*foreground}
;foreground = #f3f4f5
foreground-alt = #ffffff
;secondary = #3a3a3a
secondary = ${xrdb:*secondary}
;underline = #943ed6
underline = ${xrdb:*underline}

[bar/default]
;override-redirect = true
;wm-restack = i3
height = 24
width = 100%
offset-y = 0
top = true
fixed-center = true 
