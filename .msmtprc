# vim: filetype=config
#These are settings for all accounts.
account default
protocol smtp
auth on
tls on
tls_nocertcheck

#Below are example accounts. Comment out what you don't use.

#Here is an example gmail account.
account work
from faroukmokh@gmail.com
user faroukmokh@gmail.com
#password $PASSWORD
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/mutt/creds/work.gpg"
host smtp.gmail.com
port 587

#Here is another example account. Search for your email host's SMTP server and add the information here.
account home
from fmokhtari@mail.ru
user fmokhtari@mail.ru
#password "password"
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/mutt/creds/home.gpg"
host smtp.mail.ru
port 587



