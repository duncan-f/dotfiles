#!/bin/sh

# A dmenu prompt to unmount drives.
# Provides you with mounted partitions, select one to unmount.

# Drives mounted at /, /boot and /home will not be options to unmount.
# This can be changed by modifying $exclusionregex.

pgrep -x dmenu && exit

exclusionregex="\(/boot\|/home\|/\)$"
drives=$(lsblk -lp | grep "t /" | grep -v "$exclusionregex" | awk '{print $1, "(" $4 ")", "on", $7}')
[ -z "$drives" ] && exit
chosen=$(echo "$drives" | dmenurun "Unmount which drive?" 5 | awk '{print $1}')
[ -z "$chosen" ] && exit
sudo -A umount $chosen && pgrep -x dunst && notify-send "$chosen unmounted."
