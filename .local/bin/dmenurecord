#!/usr/bin/env sh

pathpid="/tmp/recordpid"

killrecording()
{
    recpid="$(cat $pathpid)"
    kill -15 "$recpid"
    rm -f "$pathpid"

    sleep 2
    kill -9 "$recpid" >&2
    [ -n "$(pgrep -x screenkey)" ] && killall screenkey
    dunstify -r 3500 "ffmpeg" "Recording ended."
}

screencast()
{
    ffmpeg -y \
    -f x11grab \
    -framerate 60 \
    -s $(xdpyinfo | grep dimensions | awk '{print $2;}') \
    -i :0.0 \
    -f alsa -i default \
    -r 30 \
    -c:v libx264rgb -crf 0 -preset ultrafast -c:a flac \
    "$XDG_VIDEOS_DIR/screencast-$(date "+%Y%m%d%H%M%S").mkv" &
    echo $! > "$pathpid"
}

video()
{
    ffmpeg -y \
    -f x11grab \
    -framerate 60 \
    -s $(xdpyinfo | grep dimensions | awk '{print $2;}') \
    -i :0.0 \
    -c:v libx264 -qp 0 -r 30 \
    "$XDG_VIDEOS_DIR/video-$(date "+%Y%m%d%H%M%S").mkv" &
    echo $! > "$pathpid"
}

audio()
{
    ffmpeg -y \
    -f alsa -i default \
    -c:a flac \
    "$HOME/audio-$(date "+%Y%m%d%H%M%S").flac" &
    echo $! > "$pathpid"
}

camcode()
{
    ffmpeg -y \
    -f v4l2 \
    -i /dev/video0 \
    -video_size 640x480 \
    "$XDG_VIDEOS_DIR/webcam-$(date "+%Y%m%d%H%M%S").mkv" &
    echo $! > "$pathpid"
}

askrecord()
{
    choice=$(printf "Screencast\nVideo Only\nAudio Only\nWebcam" | dmenurun "Select" 5)
    case "$choice" in
        Screencast) screencast ;;
        "Video Only") video ;;
        "Audio Only") audio ;;
        Webcam) camcode ;;
    esac

    [ -n "$choice" ] && dunstify -r 3500 "ffmpeg" "Recording started."
}

askend()
{
    choice=$(printf "No\nYes" | dmenurun "Stop recording ?" 0)
    [ "$choice" = "Yes" ] && killrecording || echo "$choice"
}

case "$1" in
    kill) [ -n "$pathpid" ] && killrecording ;;
    *) ([ -f "$pathpid" ] && askend) || askrecord ;;
esac

