#!/usr/bin/env sh

eval $(xres2var)

if [[ -n $BLOCK_INSTANCE ]]; then
	bat="$BLOCK_INSTANCE"
else
	bat="BAT0"
fi

capacity=$(cat /sys/class/power_supply/$bat/capacity) || exit
status=$(cat /sys/class/power_supply/$bat/status)

if [ $capacity -gt 85 ]; then
	color="$color7"
elif [ $capacity -gt 70 ]; then
	color="$color7"
elif [ $capacity -gt 38 ]; then
	color="$color7"
elif [ $capacity -gt 18 ]; then
	color="$color3"
else
    warn="â—"
	color="$color1"
fi

[ -z "$warn" ] && warn=" "

[ $status = "Charging" ] && color="$color15" && warn=" " 
	
[ $status = "Full" ] && color="$color2"

printf '<span color="%s">%s%s%s</span>\n' "$color" "$(echo $status | sed "s/Charging/ğŸ”Œ/;s/Discharging/ğŸ”‹/;s/Not Charging/ğŸ›‘/;s/Unknown/â™»/;s/Full/âš¡/")" "$warn" "$(echo $capacity | sed 's/$/%/')"
