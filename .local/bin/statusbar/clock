	1) notify-send "Calendar" "$(cal --color=always | sed "s/..7m/<b><span color=\"$color4\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
    2) printf '%s %s' "ğŸ“…" "$(date "+%a, %d %b")" ;;
	3) "$TERMINAL" -e calcurse & ;;
esac

printf '%s %s\n' "ğŸ•“" "$(date "+%I:%M %p")"
