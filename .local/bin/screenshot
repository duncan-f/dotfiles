#!/usr/bin/env sh


case "$1" in
    -s) scrot -z 'screenshot-%Y%m%d%H%M%S-$wx$h.png' -e 'mv $f ~/pics/screenshots' ;;
    -f | --focused) scrot -u -z 'screenshot-%Y%m%d%H%M%S-$wx$h.png' -e 'mv $f ~/pics/screenshots' ;;
    -r | --region) scrot -s -z 'screenshot-%Y%m%d%H%M%S-$wx$h.png' -e 'mv $f ~/pics/screenshots' ;;
    *) scrot -z 'screenshot-%Y%m%d%H%M%S-$wx$h.png' -e 'mv $f ~/pics/screenshots' ;;
esac

notify-send -i "$HOME/.local/bin/camera_2.png" "Screenshot saved" && aplay "$HOME/.local/share/sounds/screen.wav"

